{
  "name": "clash-of-robots",
  "version": "0.0.0-development",
  "main": "build/src/Game.js",
  "license": "MIT",
  "devDependencies": {
    "@types/chai": "^4.0.4",
    "@types/mocha": "^2.2.44",
    "@types/redux": "^3.6.0",
    "@types/uuid": "^3.4.3",
    "awesome-typescript-loader": "^3.3.0",
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "chai": "^4.1.2",
    "coveralls": "^3.0.0",
    "github-changes": "^1.1.1",
    "husky": "^0.14.3",
    "karma": "^1.7.1",
    "karma-chrome-launcher": "^2.2.0",
    "karma-mocha": "^1.3.0",
    "karma-typescript": "^3.0.8",
    "lint-staged": "^4.3.0",
    "mocha": "^4.0.1",
    "nyc": "^11.3.0",
    "prettier": "^1.8.1",
    "redux": "^3.7.2",
    "semantic-release": "^8.2.0",
    "ts-node": "^3.3.0",
    "typescript": "^2.6.1",
    "webpack": "^3.8.1"
  },
  "dependencies": {
    "uuid": "^3.1.0"
  },
  "peerDependencies": {
    "redux": "^3.7.2"
  },
  "scripts": {
    "build": "tsc",
    "bundle": "webpack",
    "test:mocha": "nyc mocha -- test/**/*.spec.ts",
    "test:karma": "karma start",
    "precommit": "lint-staged",
    "test": "npm run test:mocha && npm run test:karma",
    "prepublish": "npm run build",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "release": "git add --all && git cz && git push"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/morten-olsen/clash-of-robots.git"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "prettier --write",
      "git add"
    ]
  },
  "nyc": {
    "extension": [
      ".ts",
      ".tsx"
    ],
    "exclude": [
      "test/**/*"
    ],
    "reporter": [
      "lcov",
      "text-summary",
      "html"
    ],
    "require": [
      "ts-node/register"
    ]
  },
  "prettier": {
    "tabWidth": 2,
    "printWidth": 80,
    "useTabs": false,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "all",
    "bracketSpacing": true,
    "insertPragma": true
  }
}
